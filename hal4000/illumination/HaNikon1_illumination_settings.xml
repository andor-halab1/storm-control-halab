<?xml version="1.0" encoding="ISO-8859-1"?>
<illumination_settings>

  <control_modules>
	
    <control_module>
      <name>spectra</name>
      <module_name>sc_hardware.lumencor.spectra</module_name>
      <class_name>Spectra</class_name>
      <parameters>
	<counter_board>PCI-6221</counter_board>
	<counter_id type="int">0</counter_id>
	<counter_trigger type="int">0</counter_trigger>
	<waveform_clock>ctr0internaloutput</waveform_clock>
      </parameters>
    </control_module>
	
  </control_modules>

  <channels>

    <!-- 750 laser -->
    <channel>
      <description>750</description>
      <color type="rgb">200,0,0</color>
      
      <digital_modulation>
	<uses>spectra</uses>
      </digital_modulation>
	  
	  <amplitude_modulation>
	<uses>spectra</uses>
	<display_normalized type="boolean">True</display_normalized>
	<parameters>
	  <maximum type="int">5000</maximum>
	</parameters>
      </amplitude_modulation>
    </channel>

    <!-- 647 laser -->
    <channel>
      <description>647</description>
      <color type="rgb">255,0,0</color>
      
      <digital_modulation>
	<uses>spectra</uses>
      </digital_modulation>
	  
	  <amplitude_modulation>
	<uses>spectra</uses>
	<display_normalized type="boolean">True</display_normalized>
	<parameters>
	  <maximum type="int">5000</maximum>
	</parameters>
      </amplitude_modulation>
    </channel>
	
	<!-- 568 laser -->
    <channel>
      <description>568</description>
      <color type="rgb">255,255,0</color>
      
      <digital_modulation>
	<uses>spectra</uses>
      </digital_modulation>
	  
	  <amplitude_modulation>
	<uses>spectra</uses>
	<display_normalized type="boolean">True</display_normalized>
	<parameters>
	  <maximum type="int">5000</maximum>
	</parameters>
      </amplitude_modulation>
    </channel>

    <!-- 405 laser -->
    <channel>
      <description>405</description>
      <color type="rgb">255,0,255</color>
      
      <digital_modulation>
	<uses>spectra</uses>
      </digital_modulation>
	  
	  <amplitude_modulation>
	<uses>spectra</uses>
	<display_normalized type="boolean">True</display_normalized>
	<parameters>
	  <maximum type="int">5000</maximum>
	</parameters>
      </amplitude_modulation>
    </channel>

  </channels>

</illumination_settings>
