<?xml version="1.0" encoding="ISO-8859-1"?>
<illumination_settings>

  <control_modules>

    <control_module>
      <name>AOTF</name>
      <module_name>sc_hardware.crystalTechnologies.hAotf</module_name>
      <class_name>CrystalTechAOTF64Bit</class_name>
      <parameters>
	<use_fsk type="boolean">true</use_fsk>
      </parameters>
    </control_module>

    <control_module>
      <name>obis405</name>
      <module_name>sc_hardware.coherent.hLaser</module_name>
      <class_name>CoherentObis</class_name>
      <parameters>
	<port>COM19</port>
      </parameters>
    </control_module>

    <control_module>
      <name>daq</name>
      <module_name>sc_hardware.nationalInstruments.hNicontrol</module_name>
      <class_name>Nidaq</class_name>
      <parameters>
	<counter_board>PCIe-6323</counter_board>
	<counter_id type="int">0</counter_id>
	<counter_trigger type="int">8</counter_trigger>
	<waveform_clock>PFI12</waveform_clock>
      </parameters>
    </control_module>
  </control_modules>

  <channels>

    <!-- 750 laser -->
    <channel>
      <description>750</description>
      <color type="rgb">200,0,0</color>
      
      <amplitude_modulation>
	<uses>AOTF</uses>
	<display_normalized type="boolean">True</display_normalized>
	<parameters>
	  <maximum type="int">8000</maximum>
	  <channel type="int">0</channel>
	  <off_frequency type="float">20.0</off_frequency>
	  <on_frequency type="float">75.71</on_frequency>
	</parameters>
      </amplitude_modulation>

      <digital_modulation>
	<uses>daq</uses>
	<parameters>
	  <board>PCIe-6323</board>
	  <channel type="int">0</channel>
	</parameters>
      </digital_modulation>

    </channel>

    <!-- 647 laser -->
    <channel>
      <description>647</description>
      <color type="rgb">255,0,0</color>
      
      <amplitude_modulation>
	<uses>AOTF</uses>
	<display_normalized type="boolean">True</display_normalized>
	<parameters>
	  <maximum type="int">7400</maximum>
	  <channel type="int">1</channel>
	  <off_frequency type="float">20.0</off_frequency>
	  <on_frequency type="float">90.16</on_frequency>
	</parameters>
      </amplitude_modulation>
      
      <digital_modulation>
	<uses>daq</uses>
	<parameters>
	  <board>PCIe-6323</board>
	  <channel type="int">1</channel>
	</parameters>
      </digital_modulation>
      
    </channel>

    <!-- 561 laser -->
    <channel>
      <description>561</description>
      <color type="rgb">255,255,0</color>
      
      <amplitude_modulation>
	<uses>AOTF</uses>
	<display_normalized type="boolean">True</display_normalized>
	<parameters>
	  <maximum type="int">6400</maximum>
	  <channel type="int">2</channel>
	  <off_frequency type="float">20.0</off_frequency>
	  <on_frequency type="float">108.15</on_frequency>
	</parameters>
      </amplitude_modulation>

      <digital_modulation>
	<uses>daq</uses>
	<parameters>
	  <board>PCIe-6323</board>
	  <channel type="int">2</channel>
	</parameters>
      </digital_modulation>

    </channel>

    <!-- 488 laser -->
    <channel>
      <description>488</description>
      <color type="rgb">0,0,255</color>
      
      <amplitude_modulation>
	<uses>AOTF</uses>
	<display_normalized type="boolean">True</display_normalized>
	<parameters>
	  <maximum type="int">5700</maximum>
	  <channel type="int">3</channel>
	  <off_frequency type="float">20.0</off_frequency>
	  <on_frequency type="float">130.24</on_frequency>
	</parameters>
      </amplitude_modulation>
      
      <digital_modulation>
	<uses>daq</uses>
	<parameters>
	  <board>PCIe-6323</board>
	  <channel type="int">3</channel>
	</parameters>
      </digital_modulation>
 
    </channel>

    <!-- 405 laser -->
    
    <channel>
      <description>405</description>
      <color type="rgb">255,0,255</color>

      <amplitude_modulation>
	<uses>obis405</uses>
	<display_normalized type="boolean">True</display_normalized>
	<parameters>
	  <maximum type="int">5000</maximum>
	</parameters>
      </amplitude_modulation>

      <digital_modulation>
	<uses>daq</uses>
	<parameters>
	  <board>PCIe-6323</board>
	  <channel type="int">4</channel>
	</parameters>
      </digital_modulation>
 
    </channel>
    
  </channels>

</illumination_settings>
