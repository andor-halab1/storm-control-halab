<?xml version="1.0" encoding="ISO-8859-1"?>
<hardware>
  <!-- Defines all the hardware (prism2).
       
       Note that if you don't have a particular piece of hardware
       it needs to be commented out in this file.
    -->

  <camera>
    <module type="string">classicSingleCamera</module>
    <parameters>
      <control type="string">andorCameraControl</control>
      <pci_card type="int">1</pci_card>
      <display type="string">andorCameraWidget</display>
    </parameters>
  </camera>

  <focuslock>
    <module type="string">prism2FocusLockZ</module>
  </focuslock>

  <illumination>
    <module type="string">prism2IlluminationControl</module>
  </illumination>

  <joystick>
    <module type="string">gamepad310JoystickControl</module>
  </joystick>

  <!--
  <misc_control>
    <module type="string">prism2MiscControl</module>
  </misc_control>
  -->

  <shutters>
    <module type="string">prism2ShutterControl</module>
  </shutters>

  <stage>
    <module type="string">prism2StageControl</module>
  </stage>

  <!--
  <temperature_logger>
    <module type="string">NA</module>
  </temperature_logger>
  -->
  
</hardware>
